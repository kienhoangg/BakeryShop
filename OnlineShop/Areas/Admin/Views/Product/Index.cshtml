        //} )
        //.catch( err => {
        //	console.error( err.stack );
        //} );
    </script>
    <script>
        var productController = new productController();
        productController.Initialize();
    </script>
}
<script id="template-mustache" type="x-tmpl-mustache">
    <tr>
        <th scope="row"><button data-id="{{Id}}" class="btn btn-default btn-sm btn-edit"><i class="fa fa-pencil"></i></button><button data-id="{{Id}}" class="btn btn-danger btn-sm btn-delete"><i class="fa fa-trash"></i></button></th>
        <td>{{ProductName}}</td>
        <td>{{CategoryName}}</td>
        <td>{{Price}}</td>
        <td>{{{Image}}}</td>
        <td>{{CreatedDate}}</td>
        <td>{{{Status}}}</td>
    </tr>
</script>

